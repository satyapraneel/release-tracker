{{ define "release/list" }}
    {{template "layout/top" }}
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Releases Tickets</h1>
        </div>


        <div class="container" >
            <div class="table-responsive row justify-content-md-center">
                <form>
                <br class="form-group col-md-auto">
                    <label for="releases" class="col-sm-3 control-label">Releases:</label>
                    <div class="col-sm-6">
                        <select name='releases_name' class="form-control" id="releases_name">
                            {{range .releases}}
                                <option value="{{ .ID}}"> {{ .Name}}</option>
                            {{end}}
                        </select>
                    </div>
                </form>
                <p></p><p></p>
                <div class="table-responsive">
                    <table class="table table-striped table-sm" id="releases_tickets_table">
                        <thead>
                        <tr>
                            <th>Issue Id</th>
                            <th>Issue Summary</th>
                            <th>Created Date</th>
                            <th>Created Time</th>
                            <th>Type</th>
                            <th>Project</th>
                            <th>Priority</th>
                            <th>Status</th>
{{/*                            <th>Actions</th>*/}}
                        </tr>
                        </thead>
                        <tbody class="release_tickets"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    {{template "layout/bottom" }}
{{ end }}