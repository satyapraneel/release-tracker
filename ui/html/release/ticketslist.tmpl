{{ define "release/list" }}
    {{template "layout/top" }}
    <div class="tab-content rounded-bottom">
        <div class="tab-pane  active preview" role="tabpanel" id="preview-943">
            <div class="row">
                <div class="col-sm-11">
                    <div class="card callout callout-info mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Create Release</h5>
                            <hr />
                                <div class="table-responsive row justify-content-md-center">
                                    <form>
                                    <br class="form-group col-md-auto">
                                        <label for="releases" class="col-sm-3 control-label">Releases:</label>
                                        <div class="col-sm-6">
                                            <select name='releases_name' class="form-control" id="releases_name">
                                                {{range .releases}}
                                                    <option value="{{ .ID}}"> {{ .Name}}</option>
                                                {{end}}
                                            </select>
                                        </div>
                                    </form>
                                    <p></p><p></p>
                                    <div class="table-responsive">
                                        <table class="table table-bordered datatable" id="releases_tickets_table">
                                            <thead>
                                            <tr>
                                                <th>Issue Id</th>
                                                <th>Issue Summary</th>
                                                <th>Created Date</th>
                                                <th>Created Time</th>
                                                <th>Type</th>
                                                <th>Project</th>
                                                <th>Priority</th>
                                                <th>Status</th>
                    {{/*                            <th>Actions</th>*/}}
                                            </tr>
                                            </thead>
                                            <tbody class="release_tickets"></tbody>
                                        </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </main>
    {{template "layout/bottom" }}
{{ end }}