{{ define "release/create" }}
{{template "layout/top" }}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Create Release</h1>
    </div>

<!--    <h2>Section title</h2>-->
    <div class="table-responsive">
        <form action='/release/store' method='POST' >
            <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
            <div>
                <label>Release Name:</label>
                <input type='text' name='name' class="form-control" id="name"> </div>
            <div>
                <label>Release Type:</label>
                <input type='text' name='type' class="form-control" id="type"> </div>
            <div>
                <label>Release Date:</label>
                <input type="date" class="form-control" name="target_date" id="target_date" format></div>
            <div>
                <label>Owner:</label>
                <input type='text' name='owner' class="form-control" id="owner"> </div>
            <div>
                <input type='submit' value='Save' class="btn btn-sm btn-outline-secondary">
            </div>
        </form>
    </div>
</main>
{{template "layout/bottom" }}
{{ end }}