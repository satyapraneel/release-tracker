{{ define "reviewers/view" }}
{{template "layout/top" }}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Reviewers</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <a href="/reviewers/create" class="btn btn-sm btn-outline-info">
                    Create Reviewer
                </a>
            </div>
        </div>
    </div>


    <div class="table-responsive">
        <table class="table table-responsive" id="reviewers_table"
               data-get_action="/reviewers/list"
               data-model="reviewers">
            <thead>
            <tr>     
                <th>Name</th>
                <th>Email</th>
                <th>Bitbucket User Name</th>
                <th>Action</th>
            </tr>
            </thead>

        </table>
    </div>
</main>
{{template "layout/bottom" }}
{{end}}